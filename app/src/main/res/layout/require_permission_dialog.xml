<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/medium_space"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/extra_large_space"
        android:layout_height="@dimen/extra_large_space"
        android:src="@drawable/ic_permission"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_permission_explain"
        android:fontFamily="@font/opensans_regular"
        android:layout_marginTop="@dimen/medium_space"
        android:textSize="@dimen/small_text"
        android:gravity="center"/>
    <TextView
        android:id="@+id/btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_accept"
        android:layout_marginTop="@dimen/medium_space"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/primary_color_round_corner_background"
        android:padding="@dimen/normal_space"
        android:gravity="center"/>
</LinearLayout>