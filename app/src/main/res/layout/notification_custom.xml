<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/small_space"
    android:paddingVertical="@dimen/normal_space">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="@dimen/small_text"
            android:textColor="@android:color/black"
            android:text="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_space"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/extra_small_text"
            android:text="@string/str_noti_content"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btnFree"
        android:layout_width="@dimen/large_space"
        android:layout_height="@dimen/large_space"
        android:background="@null"
        android:src="@drawable/ic_free_mem_noti"/>
    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="@dimen/large_space"
        android:layout_height="@dimen/large_space"
        android:layout_marginStart="@dimen/small_space"
        android:background="@null"
        android:src="@drawable/ic_stop"/>
</LinearLayout>